<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="basePath">./logs</Property>
        <Property name="scenarioName">%X{scenarioName}</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="ScenarioFile" fileName="${basePath}/${scenarioName}.log" filePattern="${basePath}/${scenarioName}-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <SizeBasedTriggeringPolicy size="5000" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
           <AppenderRef ref="ScenarioFile" />
        </Root>
        <Logger name="io.cucumber" level="info" additivity="false">
            <AppenderRef ref="ScenarioFile"/>
        </Logger>
    </Loggers>
</Configuration>